<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redux.Android"
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="18dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:id="@+id/tv_count"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/b_next_screen"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/b_decrement"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            app:layout_constraintRight_toLeftOf="@id/b_increment"
            android:text="Decrement"
            android:theme="@style/Widget.AppCompat.Button"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/b_next_screen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/b_decrement"
            android:id="@+id/b_increment"
            android:text="Increment"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:theme="@style/Widget.AppCompat.Button"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:id="@+id/b_next_screen"
            android:text="Next Screen"
            android:theme="@style/Widget.AppCompat.Button"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>